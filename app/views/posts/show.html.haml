%p
  %strong Title:
  = @post.title
%p
  %strong Text:
  = @post.text


%h2 Agrega un comentario:
= form_for([@post, @post.comments.build]) do |f|
  %p
    = f.label :commenter
    %br/
    = f.text_field :commenter
  %p
    = f.label :body
    %br/
    = f.text_area :body
  %p
    = f.submit

%h2 Comentarios
- @post.comments.each do |comment|
  %p
    %strong Commenter:
    = comment.commenter
  %p
    %strong Comment:
    = comment.body

= link_to "Back", posts_path
= link_to 'Edit', edit_post_path(@post)
.row
  %h1 Mis posts

  %table.large-9.columns
    %tr
      %th
      %th
      %th

    - @posts.each do |post|
      %tr
        %td.large-12.columns.title= post.title
        %td.large-12.columns.post= post.text
        %td= link_to 'Show', post_path(post)
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'}

  = link_to "New posts", new_post_path